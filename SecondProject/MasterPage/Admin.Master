    <script>
        document.getElementById("menu-toggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });

        function highlight(el) {
            document.querySelectorAll(".list-group-item").forEach(item => {
                item.classList.remove("active-parent");
            });
            el.classList.add("active-parent");
        }

        // Maintain active highlight on collapse shown
        $('.collapse').on('show.bs.collapse', function () {
            $(this).prev('.list-group-item').addClass('active-parent');
        });

        $('.collapse').on('hide.bs.collapse', function () {
            $(this).prev('.list-group-item').removeClass('active-parent');
        });
    </script>
